# Server
# Base client url used to build verification links
CLIENT_URL=http://localhost:5173

# SMTP settings (required in production or when REQUIRE_SMTP=true)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM="NxtGen LMS <noreply@example.com>"

# If set to true, the server will fail verification requests if SMTP is not configured
REQUIRE_SMTP=false

# Firebase service account JSON (stringified). Example:
# FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account", ... }'
FIREBASE_SERVICE_ACCOUNT_JSON=

# Supabase connection (set by your deployment)
# SUPABASE_URL=
# SUPABASE_ANON_KEY=

# Admin secret used by admin endpoints (optional)
# ADMIN_SECRET=
